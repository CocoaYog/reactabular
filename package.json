{
  "private": true,
  "name": "reactabular",
  "version": "1.0.0",
  "description": "A framework for building the React table you need",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "init": "npm install && lerna bootstrap",
    "start": "webpack-dev-server --env develop",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js --ext .jsx --cache --fix",
    "gh-pages:build-and-deploy": "npm run gh-pages:build && npm run gh-pages:deploy",
    "gh-pages:build": "webpack --env build",
    "gh-pages:deploy": "gh-pages -d gh-pages",
    "publish:canary": "NODE_ENV=production lerna publish --canary",
    "publish": "NODE_ENV=production lerna publish && npm run gh-pages:build-and-deploy",
    "postinstall": "node lib/post_install.js",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reactabular/reactabular.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "table",
    "tables"
  ],
  "files": [
    "lib/post_install.js",
    "lerna.json",
    "packages/**/*.js"
  ],
  "author": "Juho Vepsalainen <bebraw@gmail.com> (http://github.com/bebraw)",
  "license": "MIT",
  "main": "packages/reactabular",
  "bugs": {
    "url": "https://github.com/reactabular/reactabular/issues"
  },
  "homepage": "http://reactabular.js.org/",
  "jest": {
    "collectCoverage": true,
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "packages"
    ],
    "moduleNameMapper": {
      "@reactabular/sticky": "<rootDir>/packages/sticky",
      "@reactabular/table": "<rootDir>/packages/table"
    },
    "setupFiles": [
      "./lib/test_setup.js"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-lodash": "^3.3.2",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-object-rest-spread": "^6.22.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.13",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "catalog": "^3.5.3",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^0.1.17",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "^0.28.8",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "gh-pages": "^0.12.0",
    "git-prepush-hook": "^1.0.2",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lerna": "2.11.0",
    "lint-staged": "^7.0.5",
    "lodash": "^4.17.10",
    "prop-types": "^15.6.0",
    "purecss": "^1.0.0",
    "raw-loader": "^0.5.1",
    "react": "^16.2.0",
    "react-dnd": "^2.5.4",
    "react-dnd-html5-backend": "^2.5.4",
    "react-dom": "^16.2.0",
    "react-edit": "^6.4.0",
    "react-github-corner": "^2.3.0",
    "react-pagify": "^2.4.0",
    "react-redux": "^5.0.2",
    "react-test-renderer": "^16.2.0",
    "react-visibility-toggles": "^1.2.0",
    "reactabular-column-extensions": "^8.9.3",
    "reactabular-resizable": "^8.12.0",
    "redux": "^4.0.0",
    "searchtabular": "^1.7.0",
    "selectabular": "^2.1.0",
    "sortabular": "^1.5.1",
    "style-loader": "^0.19.1",
    "styled-components": "^3.2.6",
    "stylesheet-helpers": "^0.2.2",
    "table-resolver": "^4.0.1",
    "treetabular": "^3.5",
    "url-loader": "^0.6.2",
    "uuid": "^3.0.1",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.10.1",
    "webpack-merge": "^4.1.1"
  },
  "pre-push": [
    "lint",
    "test"
  ],
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
